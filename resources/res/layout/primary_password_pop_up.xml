        <LinearLayout android:orientation="vertical" android:background="#a9a9a9" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
                <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/pop_up_titleTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:text="@string/pls_enter_primary_usesr_pw" android:textAlignment="center"/>

                <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/default2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="@string/pls_keep_primary_password_safe" android:textAlignment="center"/>

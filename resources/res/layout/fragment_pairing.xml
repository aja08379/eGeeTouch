<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/LinearLayout2" android:background="@color/white" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="30sp" android:textStyle="bold" android:textColor="@color/cyanblue" android:textColorHint="@color/cyanblue" android:gravity="center" android:id="@+id/textView_pairing_lock_name" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/pair_and_sync" android:onClick="btn_change_lock_name" android:textAlignment="center"/>
            <EditText android:textSize="30sp" android:textStyle="bold" android:gravity="center" android:id="@+id/editText_new_lock_name" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:text="@string/pair_and_sync" android:ems="10"/>
            <LinearLayout android:id="@+id/LinearLayout_edit_name_buttons" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/editText_new_lock_name">
                <Button android:textColor="@color/white" android:id="@+id/button_new_lock_name_save" android:background="@drawable/mybutton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/save" android:layout_weight="1"/>
                <Button android:textColor="@color/white" android:id="@+id/button_new_lock_name_cancel" android:background="@drawable/mybutton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/cancel" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="center" android:id="@+id/imageView_pairing" android:layout_width="167dp" android:layout_height="199dp" android:layout_marginTop="10dp" android:src="@drawable/padlock"/>
    <TextView android:textSize="15sp" android:textColorHint="@color/cyanblue" android:gravity="left" android:id="@+id/TextView_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/hi" android:textAlignment="center"/>
    <TextView android:textSize="15sp" android:textColorHint="@color/cyanblue" android:gravity="center" android:layout_gravity="center" android:id="@+id/textView_instruction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="5dp" android:layout_marginRight="16dp" android:text="@string/pair" android:textAlignment="center"/>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/LinearLayout_pair_again" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textColor="@color/white" android:id="@+id/button_pair_again" android:background="@drawable/mybutton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginBottom="10dp" android:text="@string/dashboard" android:layout_weight="1" android:onClick="btn_dash_board"/>
            <Button android:textColor="@color/white" android:id="@+id/Button_retype_password" android:background="@drawable/mybutton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/re_type_password" android:layout_weight="1" android:onClick="btn_retype_password"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/LinearLayout_more_function" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp">
        <LinearLayout android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textColor="@color/white" android:id="@+id/button_disconnect" android:background="@drawable/mybutton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="@string/dashboard" android:layout_weight="1" android:onClick="btn_dash_board"/>
            <Button android:textColor="@color/white" android:id="@+id/button_morefunctions" android:background="@drawable/mybutton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/more_function" android:layout_weight="1" android:onClick="btn_more_function"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

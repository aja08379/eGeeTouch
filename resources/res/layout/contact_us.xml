<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
    <androidx.cardview.widget.CardView android:layout_width="300dp" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true" app:cardBackgroundColor="@color/white" app:cardCornerRadius="15dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/pop_up_title" android:background="@color/cyanblue" android:padding="5dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="20dp" android:text="Make sure its you" android:textAlignment="center"/>
                <TextView android:textSize="16sp" android:textColor="@color/egeetouch_commercial_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="We need some identity to progress your respond. Please fill in the form" android:textAlignment="center"/>
                <TextView android:textStyle="bold" android:id="@+id/email_customerr" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
                <TextView android:textStyle="bold" android:id="@+id/lockseriall" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
                <EditText android:id="@+id/tagidd" android:background="@drawable/border" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="Tag ID" android:maxLength="5" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <Button android:textColor="@color/white" android:id="@+id/sent_mailgunn" android:background="@color/cyanblue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dp" android:text="Contact Us" android:layout_weight="1" android:textAllCaps="false"/>
                    <Button android:textColor="@color/white" android:id="@+id/btn_cancell" android:background="@color/cyanblue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

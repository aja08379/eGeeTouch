<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/LinearLayout1" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:textAlignment="center">
    <LinearLayout android:orientation="vertical" android:focusableInTouchMode="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="100dp" android:src="@drawable/dashboard"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout02" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/TextView02" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/add_lock_choose_model2"/>
                <EditText android:textSize="18sp" android:gravity="center" android:layout_gravity="center" android:id="@+id/editText_lockname2" android:background="@drawable/border" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:hint="@string/add_lock_name" android:ems="10" android:maxLength="12" android:inputType="text" android:textAlignment="center">
                    <requestFocus/>
                </EditText>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/TextView01" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/add_lock_choose_model3"/>
                <EditText android:textSize="18sp" android:gravity="center" android:layout_gravity="center" android:id="@+id/editText_primarypassword2" android:background="@drawable/border" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:hint="@string/add_lock_password" android:ems="10" android:maxLength="6" android:inputType="textPassword" android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout_step4" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/textView_addlock_step4" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/add_lock_choose_model4"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center" android:id="@+id/imageView_power_on" android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/on_travelpadlock"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp" android:layout_marginBottom="10dp">
            <Button android:textStyle="bold" android:textColor="@color/white" android:id="@+id/button_save_pair" android:background="@drawable/mybutton" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/save_and_pair" android:onClick="btn_save_pair"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

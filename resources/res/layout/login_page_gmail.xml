<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="right" android:orientation="vertical" android:id="@+id/RelativeLayout1" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="7sp" android:textColor="@color/black" android:id="@+id/textView_version2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="2dp" android:layout_marginBottom="3dp" android:text="V3.02" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <ImageView android:id="@+id/imageView_banner" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginBottom="25dp" android:src="@drawable/egeetouch_banner_small" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <androidx.viewpager.widget.ViewPager android:id="@+id/myviewpager" android:background="@color/white" android:layout_width="340dp" android:layout_height="340dp" android:layout_marginLeft="5dp" android:layout_above="@+id/LinearLayout_login_button" android:layout_below="@+id/imageView_banner" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout_login_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="8dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/button_fb" android:background="@drawable/mybutton_fb" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/sign_in_with_fb" android:onClick="btn_fb"/>
        <Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/button_gmail" android:background="@drawable/mybutton_google" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sign_in_with_google" android:onClick="btn_gmail"/>
        <com.facebook.login.widget.LoginButton android:layout_gravity="center_horizontal" android:id="@+id/login_button_fb" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="30dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <Button android:textColor="@color/white" android:id="@+id/button_signup" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/sign_up" android:layout_weight="1" android:onClick="btn_signup"/>
            <Button android:textColor="@color/white" android:id="@+id/button_login" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/login" android:layout_weight="1" android:onClick="btn_login"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

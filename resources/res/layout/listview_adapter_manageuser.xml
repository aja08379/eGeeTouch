<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/RelativeLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <ImageView android:layout_gravity="center" android:id="@+id/ImageView_user_pic" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="15dp" android:src="@drawable/function_user_icon"/>
            <TextView android:textSize="25sp" android:ellipsize="marquee" android:layout_gravity="center_vertical" android:id="@+id/TextView_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="User Name" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

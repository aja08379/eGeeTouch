        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
                <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/colorBlueText" android:id="@+id/pop_up_titleTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:text="@string/egee_pop_up_tag_title" android:textAlignment="center"/>
                <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorBlueText" android:id="@+id/pop_up_sub_titleTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="Wanna Add More Tags?" android:textAlignment="center"/>
                <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/default2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/egee_pop_up_upgrade" android:textAlignment="center"/>

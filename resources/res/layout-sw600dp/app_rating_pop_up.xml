<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
    <LinearLayout android:orientation="vertical" android:layout_width="300dp" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true" app:cardBackgroundColor="@color/white" app:cardCornerRadius="15dp">
            <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <ImageView android:layout_gravity="center" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:src="@drawable/ic_launcher"/>
                    <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/cyanblue" android:id="@+id/titleTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:text="Thanks for your feedback." android:textAlignment="center"/>
                    <TextView android:textSize="18sp" android:id="@+id/messageTV" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="Please take a moment to rate us." android:textAlignment="center"/>
                    <RatingBar android:theme="@style/RatingBar" android:layout_gravity="center" android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="1" android:scaleX="0.9" android:scaleY="0.9"/>
                    <EditText android:id="@+id/ed_review" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:hint="Write a review"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <LinearLayout android:orientation="vertical" android:id="@+id/ll_review" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="?android:attr/dividerHorizontal">
                            <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="2dp"/>
                            <Button android:textSize="18sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/button_review" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Write a review ?" android:textAllCaps="false"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_weight="1">
                            <Button android:textSize="18sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/button_notNow" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="0.5dp" android:text="Not now" android:layout_weight="1" android:textAllCaps="false"/>
                            <Button android:textSize="18sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/button_submit" android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="0.5dp" android:text="Okay" android:layout_weight="1" android:textAllCaps="false"/>
                        </LinearLayout>
                        <View android:background="@color/cyanblue" android:layout_width="match_parent" android:layout_height="2dp"/>
                        <Button android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/button_cancel" android:background="@color/cyanblue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/cancel" android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
